<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_theme"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/level1Img"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_1"/>
        <ImageView
            android:id="@+id/level2Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_2"/>
        <ImageView
            android:id="@+id/level3Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_3"/>
        <ImageView
            android:id="@+id/level4Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_4"/>
        <ImageView
            android:id="@+id/level5Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_5"/>
        <ImageView
            android:id="@+id/level6Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_6"/>
        <ImageView
            android:id="@+id/level7Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_7"/>
        <ImageView
            android:id="@+id/level8Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_8"/>
        <ImageView
            android:id="@+id/level9Img"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/img_level_9"/>
    </LinearLayout>

</RelativeLayout>